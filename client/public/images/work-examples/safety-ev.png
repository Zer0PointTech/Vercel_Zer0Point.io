        .tech-lines {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
            pointer-events: none;
        }

        .tech-line {
            position: absolute;
            background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.5), transparent);
            height: 1px;
            width: 200px;
            animation: slide-horizontal 15s linear infinite;
            box-shadow: 0 0 10px rgba(102, 126, 234, 0.3);
        }

        .tech-line:nth-child(1) { top: 10%; animation-duration: 12s; animation-delay: 0s; }
        .tech-line:nth-child(2) { top: 30%; animation-duration: 15s; animation-delay: 2s; }
        .tech-line:nth-child(3) { top: 50%; animation-duration: 18s; animation-delay: 4s; }
        .tech-line:nth-child(4) { top: 70%; animation-duration: 14s; animation-delay: 1s; }
        .tech-line:nth-child(5) { top: 90%; animation-duration: 16s; animation-delay: 3s; }

        .tech-line-vertical {
            position: absolute;
            background: linear-gradient(180deg, transparent, rgba(118, 75, 162, 0.5), transparent);
            width: 1px;
            height: 200px;
            animation: slide-vertical 15s linear infinite;
            box-shadow: 0 0 10px rgba(118, 75, 162, 0.3);
        }

        .tech-line-vertical:nth-child(6) { left: 10%; animation-duration: 13s; animation-delay: 0.5s; }
        .tech-line-vertical:nth-child(7) { left: 30%; animation-duration: 17s; animation-delay: 2.5s; }
        .tech-line-vertical:nth-child(8) { left: 50%; animation-duration: 14s; animation-delay: 1.5s; }
        .tech-line-vertical:nth-child(9) { left: 70%; animation-duration: 16s; animation-delay: 3.5s; }
        .tech-line-vertical:nth-child(10) { left: 90%; animation-duration: 15s; animation-delay: 4.5s; }

        @keyframes slide-horizontal {
            0% { transform: translateX(-200px); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateX(calc(100vw + 200px)); opacity: 0; }
        }

        @keyframes slide-vertical {
            0% { transform: translateY(-200px); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(calc(100vh + 200px)); opacity: 0; }
        }

        .floating-shapes {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            pointer-events: none;
            z-index: 1;
        }

        .shape {
            position: absolute;
            border: 2px solid rgba(102, 126, 234, 0.5);
            animation: float-shape 20s infinite ease-in-out;
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.3),
                        inset 0 0 20px rgba(102, 126, 234, 0.1);
        }

        .shape-1 {
            width: 100px;
            height: 100px;
            border-radius: 20px;
            top: 15%;
            left: 10%;
            animation-delay: 0s;
            transform: rotate(45deg);
            background: rgba(102, 126, 234, 0.05);
        }

        .shape-2 {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            top: 70%;
            right: 15%;
            animation-delay: 5s;
            background: rgba(118, 75, 162, 0.05);
            border-color: rgba(118, 75, 162, 0.5);
            box-shadow: 0 0 20px rgba(118, 75, 162, 0.3),
                        inset 0 0 20px rgba(118, 75, 162, 0.1);
        }

        .shape-3 {
            width: 80px;
            height: 80px;
            clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
            top: 40%;
            right: 10%;
            animation-delay: 10s;
            border-color: rgba(118, 75, 162, 0.5);
            background: rgba(118, 75, 162, 0.05);
            box-shadow: 0 0 20px rgba(118, 75, 162, 0.3),
                        inset 0 0 15px rgba(118, 75, 162, 0.1);
        }

        @keyframes float-shape {
            0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); }
            25% { transform: translateY(-30px) translateX(20px) rotate(90deg); }
            50% { transform: translateY(20px) translateX(-20px) rotate(180deg); }
            75% { transform: translateY(-20px) translateX(30px) rotate(270deg); }
        }
